#!/usr/bin/env bats

source ./em-setup

# -----------------------------------------------------------------------------
function setup {
    export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"
    export PATH="$PATH:$HOME/bin:/usr/local/xyz"
}

# -----------------------------------------------------------------------------
@test "path-array" {
    run path-array
    EXP=( /usr/local/bin /usr/bin /bin /usr/sbin /sbin $HOME/bin /usr/local/xyz )
    echo $output >> xxx
    echo ${EXP[*]} >> xxx
    [ "$output" = "${EXP[*]}" ]
}